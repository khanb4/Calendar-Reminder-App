<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.calendarreminderapp.controllers.DashboardController"
            stylesheets="@style.css">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <Label fx:id="welcomeLabel" text="Welcome!" styleClass="title"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="reminderButton"
                    text="Reminder View"
                    styleClass="button-primary"
                    prefWidth="200"
                    onAction="#handleReminderView"/>

            <Button fx:id="calendarButton"
                    text="Calendar View"
                    styleClass="button-primary"
                    prefWidth="200"
                    onAction="#handleCalendarView"/>
        </VBox>
    </center>

</BorderPane>
