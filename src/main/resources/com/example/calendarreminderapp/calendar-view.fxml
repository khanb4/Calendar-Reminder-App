<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.calendarreminderapp.controllers.CalendarController"
            styleClass="root-pane"
            stylesheets="@style.css">

    <!-- TOP: month header + nav + back -->
    <top>
        <HBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <Button text="◀" onAction="#handlePrevMonth"/>
            <Label fx:id="monthYearLabel" text="December 2025" styleClass="title"/>
            <Button text="▶" onAction="#handleNextMonth"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton" text="Logout" onAction="#handleLogout"/>

        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <ScrollPane fitToWidth="true"
                    pannable="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED">
            <content>
                <VBox spacing="20">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <!-- MAIN CONTENT: Calendar + Upcoming Reminders -->
                    <HBox spacing="20">

                        <!-- LEFT: Calendar -->
                        <VBox spacing="10">
                            <GridPane fx:id="calendarGrid" hgap="6" vgap="6"/>
                            <Label fx:id="selectedDateLabel"
                                   text="Selected:"
                                   styleClass="bottom-pane-label"/>
                        </VBox>

                        <!-- RIGHT: Upcoming Reminders -->
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <Label text="Upcoming Reminders"
                                   styleClass="bottom-pane-label"/>

                            <ListView fx:id="upcomingRemindersList"
                                      VBox.vgrow="ALWAYS"
                                      maxWidth="1.7976931348623157E308"/>

                            <!-- Edit / Delete buttons for selected reminder -->
                            <HBox spacing="10">
                                <Button fx:id="editReminderButton"
                                        text="Edit Reminder"
                                        onAction="#handleEditReminder"/>
                                <Button fx:id="deleteReminderButton"
                                        text="Delete Reminder"
                                        onAction="#handleDeleteReminder"/>
                            </HBox>
                        </VBox>

                    </HBox>

                    <!-- BOTTOM: Add Reminder form -->
                    <VBox spacing="8">
                        <Label text="Add Reminder" styleClass="bottom-pane-label"/>

                        <TextField fx:id="titleField" promptText="Title"/>

                        <HBox spacing="5">
                            <!-- Prompt text makes “Hour” show up when nothing selected -->
                            <ComboBox fx:id="hourCombo"
                                      prefWidth="70.0"
                                      promptText="Hour"/>
                            <ComboBox fx:id="minuteCombo"
                                      prefWidth="80.0"
                                      promptText="Min"/>
                            <ComboBox fx:id="ampmCombo"
                                      prefWidth="80.0"
                                      promptText="AM"/>
                        </HBox>

                        <TextArea fx:id="descriptionArea"
                                  promptText="Description"
                                  prefRowCount="2"/>

                        <Button fx:id="addReminderButton" text="Save Reminder"/>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
