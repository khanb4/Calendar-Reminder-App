<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.calendarreminderapp.controllers.LoginController"
            styleClass="root-pane"
            stylesheets="@style.css">

    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <VBox alignment="CENTER"
                  styleClass="container"
                  spacing="18"
                  maxWidth="360">

                <HBox alignment="CENTER" spacing="10" styleClass="title-box">
                    <ImageView fitHeight="28" fitWidth="28" preserveRatio="true" styleClass="logo">
                        <image>
                            <Image url="@calendar_icon.png"/>
                        </image>
                    </ImageView>
                    <Label text="Calendar Reminder App" styleClass="title"/>
                </HBox>

                <TextField fx:id="usernameField" promptText="Username" styleClass="text-field"/>
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field"/>

                <Button fx:id="loginButton" text="Login" styleClass="button-primary"/>
                <Button fx:id="registerButton" text="Create an account" styleClass="button-secondary"/>

                <Label fx:id="messageLabel" styleClass="message-label"/>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>
