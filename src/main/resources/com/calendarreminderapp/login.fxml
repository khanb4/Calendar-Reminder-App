<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="root-pane" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.calendarreminderapp.controllers.LoginController">

    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0"
                   AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">

            <HBox styleClass="login-shell" alignment="CENTER">

                <!-- LEFT SIDE (Logo + Title) -->
                <VBox styleClass="login-left" alignment="CENTER" spacing="14">

                    <ImageView fitWidth="110" fitHeight="110" preserveRatio="true">
                        <image>
                            <Image url="@images/calendar-icon.png"/>
                        </image>
                    </ImageView>

                    <VBox alignment="CENTER" spacing="6" maxWidth="340">
                        <Label text="Welcome to the Calendar Reminder App" styleClass="login-title" wrapText="true" textAlignment="CENTER"/>
                        <Label text="Stay organized. Never miss an important moment."
                               styleClass="login-subtitle" wrapText="true" textAlignment="CENTER"/>
                    </VBox>

                </VBox>

                <!-- VERTICAL DIVIDER -->
                <Region styleClass="login-divider"/>

                <!-- RIGHT SIDE (Login Form) -->
                <VBox styleClass="login-right" alignment="CENTER" spacing="14">

                    <!-- top icon above fields -->
                    <ImageView fitWidth="70" fitHeight="70" preserveRatio="true">
                        <image>
                            <Image url="@images/userSS-icon.png"/>
                        </image>
                    </ImageView>

                    <!-- Username row with icon -->
                    <HBox styleClass="input-with-icon" alignment="CENTER_LEFT" spacing="10" maxWidth="360">
                        <ImageView fitWidth="20" fitHeight="20" preserveRatio="true" styleClass="field-icon">
                            <image>
                                <Image url="@images/user-icon.png"/>
                            </image>
                        </ImageView>

                        <TextField fx:id="usernameField"
                                   promptText="Username"
                                   styleClass="input-field"
                                   prefWidth="320"/>
                    </HBox>

                    <!-- Password row with icon -->
                    <HBox styleClass="input-with-icon" alignment="CENTER_LEFT" spacing="10" maxWidth="360">
                        <ImageView fitWidth="20" fitHeight="20" preserveRatio="true" styleClass="field-icon">
                            <image>
                                <Image url="@images/lock-icon.png"/>
                            </image>
                        </ImageView>

                        <PasswordField fx:id="passwordField"
                                       promptText="Password"
                                       styleClass="input-field"
                                       prefWidth="320"/>
                    </HBox>

                    <Button fx:id="loginButton" text="Log In" styleClass="button-primary" prefWidth="220"/>
                    <Button fx:id="registerButton" text="Create Account" styleClass="button-secondary" prefWidth="220"/>

                    <Label text="New here? Create an account!"
                           styleClass="hint-label"/>

                    <Label fx:id="messageLabel" styleClass="message-label"/>


                </VBox>

            </HBox>
        </StackPane>
    </children>
</AnchorPane>
