<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.calendarreminderapp.controllers.CalendarController"
            stylesheets="@style.css"
            styleClass="root-pane">

    <!--  TOP BAR -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Month navigation -->
            <Button text="◀" onAction="#handlePrevMonth"/>
            <Label fx:id="monthYearLabel" styleClass="title"/>
            <Button text="Today" onAction="#handleToday"/>
            <Button text="▶" onAction="#handleNextMonth"/>

            <!-- Spacer -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- View toggle buttons -->
            <Button fx:id="monthViewButton" text="Month" onAction="#handleMonthView"/>
            <Button fx:id="weekViewButton" text="Week" onAction="#handleWeekView"/>
            <Button fx:id="dayViewButton" text="Day" onAction="#handleDayView"/>
            <Button fx:id="yearViewButton" text="Year" onAction="#handleYearView"/>

            <!-- Logout -->
            <Button fx:id="backButton" text="Logout" onAction="#handleLogout"/>

            <Button text="Help" onAction="#openHelp"/>

        </HBox>
    </top>

    <!-- ========== CENTER CONTENT (SCROLLABLE) ========== -->
    <center>
        <ScrollPane fitToWidth="true" pannable="true" styleClass="main-scroll">
            <content>
                <VBox spacing="16">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <!-- ===== CALENDAR + RIGHT PANELS ===== -->
                    <HBox spacing="30">

                        <!-- ===== CALENDAR AREA ===== -->
                        <VBox spacing="15" HBox.hgrow="ALWAYS">
                            <GridPane fx:id="calendarGrid"
                                      hgap="10" vgap="10"
                                      VBox.vgrow="ALWAYS"
                                      HBox.hgrow="ALWAYS"
                                      maxWidth="Infinity"
                                      maxHeight="Infinity"/>
                            <Label fx:id="selectedDateLabel" styleClass="bottom-pane-label"/>
                        </VBox>

                        <!-- ===== REMINDER LISTS / EDIT BUTTONS ===== -->
                        <VBox spacing="10" prefWidth="450" maxWidth="450">

                            <HBox spacing="20">

                                <!-- Selected day reminders -->
                                <VBox spacing="10" prefWidth="225" maxWidth="225">
                                    <Label text="Selected Day" styleClass="right-section-title"/>
                                    <ListView fx:id="dayRemindersList"
                                              styleClass="reminder-list"
                                              VBox.vgrow="ALWAYS"/>
                                </VBox>

                                <!-- Upcoming reminders -->
                                <VBox spacing="10" prefWidth="225" maxWidth="225">
                                    <Label text="Upcoming" styleClass="right-section-title"/>
                                    <ListView fx:id="upcomingRemindersList"
                                              styleClass="reminder-list"
                                              VBox.vgrow="ALWAYS"/>
                                </VBox>

                            </HBox>

                            <!-- Edit / Delete buttons -->
                            <HBox spacing="10" alignment="CENTER_RIGHT">
                                <Button fx:id="editReminderButton"
                                        text="Edit Reminder"
                                        prefWidth="140"
                                        onAction="#handleEditReminder"/>

                                <Button fx:id="deleteReminderButton"
                                        text="Delete Reminder"
                                        prefWidth="140"
                                        onAction="#handleDeleteReminder"/>
                            </HBox>

                        </VBox>
                    </HBox>

                    <!-- ========== ADD REMINDER FORM (MOVED INTO SCROLL) ========== -->
                    <VBox spacing="12">

                        <Label text="Add Reminder" styleClass="bottom-pane-label"/>

                        <TextField fx:id="titleField" promptText="Title"/>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <VBox spacing="4">
                                <Label text="Hr" styleClass="timeLabel"/>
                                <ComboBox fx:id="hourCombo" prefWidth="90"/>
                            </VBox>

                            <VBox spacing="4">
                                <Label text="Min" styleClass="timeLabel"/>
                                <ComboBox fx:id="minuteCombo" prefWidth="90"/>
                            </VBox>

                            <VBox spacing="4">
                                <Label text="AM/PM" styleClass="timeLabel"/>
                                <ComboBox fx:id="ampmCombo" prefWidth="90"/>
                            </VBox>
                        </HBox>

                        <TextArea fx:id="descriptionArea"
                                  promptText="Description"
                                  prefRowCount="2"/>

                        <Button fx:id="addReminderButton"
                                text="Save Reminder"
                                prefWidth="200"
                                onAction="#handleAddReminder"/>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
